{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:nonOfficeHours"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "labels": [
    "renovatebot"
  ],
  "separateMinorPatch": true,
  "packageRules": [
    {
      "matchManagers": [
        "kubernetes"
      ],
      "matchUpdateTypes": [
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchManagers": [
        "flux"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchPackageNames": [
        "corentinth/it-tools"
      ],
      "versioning": "loose"
    }
  ],
  "flux": {
    "managerFilePatterns": [
      "/cluster/.+\\.ya?ml$/"
    ],
    "ignorePaths": [
      "**/helmrelease.yaml",
      "**/helmrelease.yml"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/cluster/apps/.+\\.ya?ml$/"
    ],
    "ignorePaths": [
      "cluster/base/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/cluster/.+/kustomization.ya?ml$/"
      ],
      "matchStrings": [
        "https://github\\.com/(?<depName>.*/.*?)/releases/download/(?<currentValue>.*?)/"
      ],
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/cluster/.+/kustomization.ya?ml$/"
      ],
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/(?<depName>[^/]*/[^/]*)/(?<currentValue>.*?)/"
      ],
      "datasourceTemplate": "github-tags"
    }
  ]
}
